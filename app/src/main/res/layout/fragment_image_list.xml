<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    android:background="@color/appWhite"
    android:elevation="2dp">

    <com.photoprint.photoclub.ui.activity.gallery.fragment.image.imagesettingcard.ImageSettingCard
        android:id="@+id/imageSettingCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:elevation="2dp">

    </com.photoprint.photoclub.ui.activity.gallery.fragment.image.imagesettingcard.ImageSettingCard>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/divider"
        android:layout_marginBottom="4dp"
        android:elevation="2dp">

    </android.support.v7.widget.RecyclerView>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_above="@+id/imageSettingCard"
        android:background="@drawable/bg_gallery_divider" />

</RelativeLayout>