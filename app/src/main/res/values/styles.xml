<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--DefaultAppTheme-->
    <style name="DefaultAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/appWhite</item>
        <item name="colorPrimaryDark">@color/appYellow</item>
        <item name="colorAccent">@color/appGray</item>
        <item name="android:statusBarColor">@color/appYellow</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/roboto_regular</item>
    </style>

    <!--RunActivity-->
    <style name="RunActivityAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/bg_splash</item>
        <item name="colorPrimary">@color/appWhite</item>
        <item name="colorPrimaryDark">@color/appYellow</item>
        <item name="colorAccent">@color/appGray</item>
    </style>

    <!--CardStyle-->
    <style name="Widget.App.SingleCardView" parent="Base.CardView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardMaxElevation">3dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <!--AppSwitchStyle-->
    <style name="Widget.App.SingleSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/appLightGray</item>
        <item name="colorControlActivated">@color/appYellow</item>
    </style>

    <style name="Widget.App.ProgressBar.RunActivity" parent="AppTheme">
        <item name="colorAccent">@color/appYellow</item>
    </style>

    <style name="Widget.App.ProgressBar.Loading" parent="AppTheme">
        <item name="colorAccent">@color/appYellow</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.App.Toolbar.Title</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.Widget.App.Toolbar.Subtitle</item>
        <item name="android:background">@color/appWhite</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="TextAppearance.Widget.App.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize" tools:ignore="SpUsage">18dp</item>
        <item name="android:textColor">@color/appYellow</item>
    </style>

    <style name="TextAppearance.Widget.App.Toolbar.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@color/appYellow</item>
    </style>

    <style name="Widget.App.Button.Yellow" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/bg_count_setting</item>
    </style>

    <!--Пункт бокового меню-->
    <style name="Widget.App.MainDrawer.MenuItem" parent="">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:paddingLeft">17dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:textSize" tools:ignore="SpUsage">16dp</item>
        <item name="android:textColor">@color/appDarkGray</item>
        <item name="android:drawablePadding">26dp</item>
        <item name="android:background">@drawable/bg_m_drawer_item</item>
    </style>

</resources>
